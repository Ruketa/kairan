{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "dist/backend",
    "esModuleInterop": true,
    "baseUrl": ".",
    "types": [
      "node",
      "reflect-metadata"
    ],
    "lib": ["es6"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "include": [
    "src/Backend/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}